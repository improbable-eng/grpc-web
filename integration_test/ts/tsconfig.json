{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "target": "es5",
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "build",
    "noEmitOnError": true
  },
  "types": [
    "jasmine",
    "node"
  ],
  "include": [
    "./src"
  ]
}
